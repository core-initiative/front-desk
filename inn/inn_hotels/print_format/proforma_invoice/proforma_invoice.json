 "html": "{% set company = frappe.get_doc(\"Global Defaults\").default_company %}\n{% set contact_person = frappe.get_doc(\"Customer\", doc.customer_id) %}\n\n\n\n\n<div class=\"row\">\n\t<div class=\"col-xs-6 text-left\">\n\t\t<h4>&nbsp;</h4>\n\t\tTo:<br/>\n\t\t{{contact_person.get_formatted(\"salutation\")}} {{contact_person.name}}<br/>\n\t\tPhone:<br/>\n\t\t{{contact_person.get_formatted(\"mobile_no\")}}\n\t</div>\t\n\t<div class=\"col-xs-6 text-right\">\n\t\t<h4>Proforma Invoice</h4>\n\t\t<table class=\"table\">\n\t\t\t<tr>\n\t\t\t\t<td style=\"border-top:none;\"><b>Invoice Number:</b></td>\n\t\t\t\t<td style=\"border-top:none;\">{{doc.name}}</td>\n\t\t\t</tr>\n\t\t\t<tr>\n\t\t\t\t<td style=\"border-top:none;\"><b>Issued Date:</b></td>\n\t\t\t\t<td style=\"border-top:none;\">{{ doc.get_formatted(\"issued_date\")}}</td>\n\t\t\t</tr>\n\t\t\t<tr>\n\t\t\t\t<td style=\"border-top:none;\"><b>Due Date:</b></td>\n\t\t\t\t<td style=\"border-top:none;\">{{ doc.get_formatted(\"due_date\")}}</td>\n\t\t\t</tr>\n\t\t</table>\t\n\t\t</div>\n</div>\n<div style=\"margin-top:15px\"></div>\n<div class=\"row\">\n\t<div class=\"col-xs-12\">\n\t<table class=\"table table-bordered\">\n\t\t<tr>\n\t\t\t<th class=\"col-xs-2\">Folio</th>\n\t\t\t<th class=\"col-xs-3\">Customer Name</th>\n\t\t\t<th class=\"col-xs-2\">Amount</th>\n\t\t</tr>\n\t\t{%- for row in doc.folio -%}\n\t\t<tr>\n\t\t\t<td>{{row.folio_id}}</td>\n\t\t\t<td>{{row.customer_id}}</td>\n\t\t\t<td>Rp.{{row.get_formatted(\"amount\")}}</td>\n\t\t</tr>\n\t\t{%- endfor -%}\n\t</table>\n\t</div>\n</div>\n<div style=\"margin-top:15px\"></div>\n<div class=\"row\">\n\t<div class=\"col-xs-12\">\n\t\t<table class=\"table\">\n\t\t\t<tr>\n\t\t\t\t<td class=\"col-xs-7 text-right\" style=\"border-top:none;\"><b>Total Amount:</b></td>\n\t\t\t\t<td class=\"col-xs-2\" style=\"border-top:none;\">Rp.{{doc.get_formatted(\"total_amount\")}}</td>\n\t\t\t</tr>\n\t\t\t<tr>\n\t\t\t\t<td class=\"col-xs-7 text-right\" style=\"border-top:none;\"><b>Paid:</b></td>\n\t\t\t\t<td class=\"col-xs-2\" style=\"border-top:none;\">Rp.{{ frappe.format_value(doc.total_amount -\n                    doc.outstanding, {\"fieldtype\":\"Currency\"}) }}</td>\n\t\t\t</tr>\n\t\t\t<tr>\n\t\t\t\t<td class=\"col-xs-7 text-right\" style=\"border-top:none;\"><b>Outstanding Amount:</b></td>\n\t\t\t\t<td class=\"col-xs-2\" style=\"border-top:none;\">Rp.{{doc.get_formatted(\"outstanding\")}}</td>\n\t\t\t</tr>\n\n\t\t</table>\n\t</div>\n</div>\n<div style=\"margin-top:15px\"></div>\n<b>Bank Transfer Info</b>\n<table class=\"table table-bordered\">\n\t<tr>\n\t\t<th>Bank Name</th>\n\t\t<th>Account Number</th>\n\t\t<th>Account Name</th>\n\t</tr>\n\t{% set accounts = frappe.get_all(\"Bank Account\", filters={\"account\": [\"like\", \"1121.0%\"]}, fields=[\"bank\", \"account_name\", \"bank_account_no\"]) %}\n\t{%- for row in accounts -%}\n\t<tr>\n\t\t<td>{{row.bank}}</td>\n\t\t<td>{{row.bank_account_no}}</td>\n\t\t<td>{{row.account_name}}</td>\n\t</tr>\n\t{%- endfor -%}\n</table>\n\n<div style=\"margin-top:155px\"></div>\n<div class=\"row\">\n    <div class=\"col-xs-4\">\n        <table class=\"table text-center\">\n            <tr>\n                <td class=\"col-xs-2\" style=\"border-top:none;\"><b>{{ frappe.db.get_value(\"User\", frappe.user,\n                    \"full_name\") }}</b></td>\n            </tr>\n            <tr>\n                <td style=\"border-top:1px solid #d1d8dd;\"><b>Income Audit</b></td>\n            </tr>\n        </table>\n    </div>\n</div>\n\n",
